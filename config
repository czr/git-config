[alias]
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    lolb = log --graph --decorate --pretty=oneline --abbrev-commit --branches
    lop = log -p

    co = checkout
    cob = checkout -b

    d = diff
    ds = diff --staged

    ap = add -p
    ria = rebase -i --autosquash
    cpick = cherry-pick
    puff = pull --ff-only
    pushf = push --force-with-lease --force-if-includes
    pushup = !git push -u origin $(git symbolic-ref --short HEAD)

    show-merge = show --first-parent

    wip = "!sh -c \"git commit --no-verify -m \\\"WIP: $1\\\"\""
    set-trello = !git config branch.$(git rev-parse --abbrev-ref HEAD).trello

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[pager]
    log = less -S
    branch = false

[push]
    default = simple

[fetch]
    prune = true

[diff]
    algorithm = histogram
    noprefix = true

[commit]
    verbose = true

[init]
    defaultBranch = main
