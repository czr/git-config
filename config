[alias]
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all

    co = checkout
    cob = checkout -b

    d = diff
    ds = diff --staged

    ap = add -p
    ria = rebase -i --autosquash
    cpick = cherry-pick
    puff = pull --ff-only
    push-u = !git push -u origin $(git symbolic-ref --short HEAD)

    show-merge = show --first-parent

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[pager]
    log = less -S

[push]
    default = simple

[diff]
    algorithm = histogram
    noprefix = true
